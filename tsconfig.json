{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowArbitraryExtensions": true,
  },
  "include": ["src"],
}
